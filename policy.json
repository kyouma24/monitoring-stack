{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ThanosS3Access",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::your-thanos-bucket-name",
                "arn:aws:s3:::your-thanos-bucket-name/*"
            ]
        },
        {
            "Sid": "EC2ServiceDiscovery",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "YACECloudWatchAccess",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:GetMetricData",
                "cloudwatch:GetMetricStatistics",
                "cloudwatch:ListMetrics",
                "tag:GetResources"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AWSCostExporterAccess",
            "Effect": "Allow",
            "Action": [
                "ce:GetCostAndUsage",
                "ce:GetDimensionValues"
            ],
            "Resource": "*"
        }
    ]
}